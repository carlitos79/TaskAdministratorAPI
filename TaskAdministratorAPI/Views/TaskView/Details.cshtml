@model TaskAdministratorAPI.Models.Tasks

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}

<body style="background-color:powderblue;">

    <div>
        <h2>Make Room</h2>
    </div>

    <div>
        <h2>Tasks Details</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.BeginDateTime)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BeginDateTime)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DeadlineDateTime)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DeadlineDateTime)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Requirements)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Requirements)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Responsables)
            </dt>
            @if (Model.Responsables.Any())
            {
                foreach (var user in Model.Responsables)
                {
                <dd>
                    @Html.DisplayFor(model => user.FirstName) @Html.DisplayFor(model => user.LastName)
                </dd>
                }
            } else
            {
                <dd>None</dd>
            }            
        </dl>
    </div>
    <div>
        <a asp-action="Index">Back to Tasks</a> |
        <a asp-action="Edit" asp-route-id="@Model.TaskID">Edit Task</a> |
        <a asp-action="Delete" asp-route-id="@Model.TaskID">Delete Task</a>
    </div>
</body>
