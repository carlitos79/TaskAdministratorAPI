@model TaskAdministratorAPI.Models.Tasks

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}

<body style="background-color:powderblue;">

    <h2>Create</h2>

    <h2>Create Task</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BeginDateTime" class="control-label"></label>
                    <input asp-for="BeginDateTime" class="form-control" />
                    <span asp-validation-for="BeginDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeadlineDateTime" class="control-label"></label>
                    <input asp-for="DeadlineDateTime" class="form-control" />
                    <span asp-validation-for="DeadlineDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Requirements" class="control-label"></label>
                    <input asp-for="Requirements" class="form-control" />
                    <span asp-validation-for="Requirements" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Tasks</a>
    </div>
</body>
